{
  "name": "vue3-template",
  "author": "Km",
  "description": " A template: vite + vue3 + vueRouter + vuex + ts + eslint + prettier + husky(gitHook) + commitlint ",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:staging": "vue-tsc --noEmit && vite build --mode staging",
    "serve": "vite preview",
    "commit": "git-cz",
    "prepare": "husky install",
    "postinstall": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "./scripts/release.sh",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"src/**/*.{vue,less,postcss,css,scss}\"",
    "lint:eslint": "eslint --fix \"src/**/*.{vue,ts,tsx}\"",
    "lint": "npm run lint:prettier && npm run lint:stylelint && npm run lint:eslint"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "lib-flexible": "^0.3.2",
    "normalize.css": "^8.0.1",
    "vant": "^3.0.16",
    "vue": "^3.0.5",
    "vue-router": "^4.0.6",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "autoprefixer": "^10.2.5",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "husky": "^6.0.0",
    "less": "^4.1.1",
    "lint-staged": "^11.0.0",
    "postcss": "^8.2.15",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.3.0",
    "sass": "^1.32.13",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.1.3",
    "vite": "^2.3.0",
    "vite-plugin-compression": "^0.2.5",
    "vite-plugin-style-import": "^0.10.0",
    "vue-tsc": "^0.0.24"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
